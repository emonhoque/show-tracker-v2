# Copy this file to .env.local and fill in your actual values

# Site configuration
SITE_URL=https://your-domain.com

# Public environment variables (available to client)
NEXT_PUBLIC_APP_PASSWORD="boston-shows-2024"
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-only environment variables
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Feature flags (Google Auth is now the default)
ENABLE_GOOGLE_AUTH=true
SUPABASE_AUTH_ENABLED=true

# Calendar export feature flags
ENABLE_CALENDAR_EXPORT=false
ENABLE_GOOGLE_CALENDAR_LINKS=true
ENABLE_ICS_DOWNLOAD=true

# Shareable URLs feature flags
ENABLE_SHAREABLE_URLS=false
ENABLE_NATIVE_SHARING=false
REQUIRE_COMMUNITY_MEMBERSHIP=true
PUBLIC_SHARE_ENABLED=false
SHARE_URL_EXPIRATION_DAYS=0

# Event Categories feature flags
ENABLE_SHOW_CATEGORIES=true
ENABLE_CATEGORY_FILTERING=true
DEFAULT_CATEGORY=general
ALLOW_UNCATEGORIZED_SHOWS=true
CATEGORY_REQUIRED_FOR_NEW_SHOWS=false

# Timezone configuration
TZ=America/New_York

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your_vercel_blob_read_write_token_here

# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Cron job security
CRON_SECRET=your_secure_random_string_here

# Discord Bot API
DISCORD_BOT_API_URL=http://discord.site.org:3001